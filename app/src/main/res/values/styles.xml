<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MusicStationMetroButton">
        <item name="android:background">@drawable/rounded_shape_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">342dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:fontFamily">@font/aller_bd</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="buttonMenuSelected">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/aller_bd</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="buttonMenuUnselected">
        <item name="android:background">@color/backgroundColorTop2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/aller_bd</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="filterButton">
        <item name="android:background">@drawable/rounded_shape_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="filterUser">
        <item name="android:background">@drawable/rounded_shape_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:fontFamily">@font/aller_bd</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="genreMusic">
        <item name="android:background">@drawable/rounded_shape_green_unselected</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:fontFamily">@font/aller_bd</item>
        <item name="android:textSize">12dp</item>
    </style>


</resources>
