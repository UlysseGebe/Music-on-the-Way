<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/showEvents"
            style="@style/buttonMenuSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/eventFr" />

        <Button
            android:id="@+id/showMaps"
            style="@style/buttonMenuUnselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Map" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

        <Button
            android:id="@+id/filterButton"
            style="@style/filterButton"
            android:layout_width="wrap_content"
            android:text="@string/filtres"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"/>

        <Button
            android:id="@+id/funkFilter"
            style="@style/filterUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/funk"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/pianoFilter"
            style="@style/filterUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Piano"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/rockFilter"
            style="@style/filterUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rock"
            android:layout_marginEnd="8dp"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/eventfromuser"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="140dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/funkarticle"
                    style="@style/filterArticle"
                    android:layout_marginRight="8dp"
                    android:text="@string/funk" />

                <Button
                    android:id="@+id/pianoarticle"
                    style="@style/filterArticle"
                    android:text="@string/Piano" />

            </LinearLayout>

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="@string/titleArticle1"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:fontFamily="@font/bwmodelicass01_bold"/>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paris-Pyramides"
                    android:textSize="10dp"
                    android:fontFamily="@font/bwmodelicass01_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendredi 10/01/2019 Ã  13h"
                    android:textSize="10dp"
                    android:fontFamily="@font/bwmodelicass01_regular"
                    android:layout_marginLeft="115dp"/>

            </LinearLayout>



    </LinearLayout>


</LinearLayout>